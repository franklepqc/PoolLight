<Window x:Class="PoolLight.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoolLight.Wpf"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="64" />
                </Style>
            </TextBlock.Style>
            Appuyez pour allumer/éteindre
        </TextBlock>

        <Grid Grid.Row="1">
            <Button Background="{Binding Path=CouleurBouton}" Command="{Binding Path=CommandeAllumer, Mode=OneTime}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="Height" Value="400" />
                        <Setter Property="Width" Value="400" />
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate>
                        <Ellipse Height="{TemplateBinding Height}"
                             Width="{TemplateBinding Width}"
                             Stroke="Black"
                             StrokeThickness="5"
                             Fill="{TemplateBinding Background}">
                        </Ellipse>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--<ProgressRing IsActive="{Binding Path=ActiviteEnCours}">
                <ProgressRing.Style>
                    <Style TargetType="ProgressRing">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="Height" Value="350" />
                        <Setter Property="Width" Value="350" />
                    </Style>
                </ProgressRing.Style>
            </ProgressRing>-->
        </Grid>

    </Grid>

</Window>
